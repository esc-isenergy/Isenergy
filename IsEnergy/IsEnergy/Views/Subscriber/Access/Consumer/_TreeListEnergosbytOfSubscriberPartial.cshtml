@{
	var treeList = Html.DevExpress().TreeList(settings => {
        settings.Name = "TreeListEnergosbytOfSubscriber";
        settings.CallbackRouteValues = new { Controller = "Subscriber", Action = "TreeListEnergosbytOfSubscriberPartial" };
		
		settings.AutoGenerateColumns = false;

				settings.KeyFieldName = "idSubdivision";
		settings.ParentFieldName = "IdParent";
				settings.Columns.Add(
            column => {
                column.FieldName = "SubdivisionName";
                column.Caption = "Отделение Энергосбыта";
            }
        );
						
		settings.SettingsPager.Visible = true;
		settings.SettingsSelection.Enabled = true;
	});
	}
@treeList.Bind(Model).GetHtml()