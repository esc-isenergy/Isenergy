@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "GridViewHistory";
        settings.CallbackRouteValues = new { Controller = "Subscriber", Action = "History", identifierSubscriber = ViewData["IdentifierSubscriber"] };

		settings.KeyFieldName = "IdSubscriberLog";
		
		settings.SettingsPager.Visible = true;
		settings.Settings.ShowGroupPanel = true;
		settings.Settings.ShowFilterRow = true;
		settings.SettingsBehavior.AllowSelectByRowClick = true;

                settings.Columns.Add("DateEdit", "Дата редактирования");
                settings.Columns.Add("NameUserEditor", "Редактор");
                settings.Columns.Add("NameSubscriberEditor", "Организация редактора");
                settings.Columns.Add("TextEdit", "Событие");  
			});
		if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
	}
@grid.Bind(Model).GetHtml()