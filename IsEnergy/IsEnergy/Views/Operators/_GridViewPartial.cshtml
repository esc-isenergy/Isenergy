@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "GridView";
        settings.CallbackRouteValues = new { Controller = "Operators", Action = "GridViewPartial" };
        settings.SettingsBehavior.ConfirmDelete = true;
        settings.CommandColumn.Visible = true;
        settings.CommandColumn.Caption = " ";
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        settings.Height = System.Web.UI.WebControls.Unit.Percentage(100);

        settings.KeyFieldName = "IdOperator";

        GridViewCommandColumnCustomButton Details = new GridViewCommandColumnCustomButton();
        Details.Text = "Детали";
        Details.ID = "Details";
        settings.CommandColumn.CustomButtons.Add(Details);
        settings.ClientSideEvents.CustomButtonClick = String.Format("function(s, e) {{ if(e.buttonID == 'Details') window.location.href='{0}/' + s.GetRowKey(e.visibleIndex); }}", DevExpressHelper.GetUrl(new { Controller = "Operators", Action = "Details" })); 
		settings.SettingsPager.Visible = true;
		settings.Settings.ShowGroupPanel = true;
		settings.Settings.ShowFilterRow = true;
		settings.SettingsBehavior.AllowSelectByRowClick = true;
        
        
        settings.Columns.Add(column =>
        {
            column.FieldName = "Users.ShortName";
            column.Caption = "ФИО пользователя";
        });
        settings.Columns.Add(column =>
        {
            column.FieldName = "Users.Login";
            column.Caption = "Логин";
        });

        settings.Columns.Add(column =>
        {
            column.FieldName = "Subscribers.Name";
            column.Caption = "Абонент";
        });
				
				
				
			});
	}
@grid.Bind(Model).GetHtml()