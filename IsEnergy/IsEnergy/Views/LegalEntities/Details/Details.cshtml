 }
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 
@Html.DevExpress().PageControl(
    settings =>    {
        settings.Name = "pageControl";
        settings.TabPages.Add("Реквизиты", "Requisite").SetContent(() =>
        {

            Html.RenderAction("RequisiteLegalEntitieView", new { id = legalEntities.IdOrganization });
     

        });
        settings.TabPages.Add("Подразделения", "Subdivision").SetContent(() =>
        {

            Html.RenderPartial("~/Views/Subscriber/Subdivision/Subdivision.cshtml");
            
        });
        settings.TabPages.Add("Сотрудники", "CoWorker").SetContent(() =>
        {
            Html.RenderAction("CoWorker", "Subscriber", new { IdentifierSubscriber = Model.IdentifierSubscriber });
        });
        settings.TabPages.Add("Сервис", "Access").SetContent(() =>
        {
            Html.RenderAction("Changes", "Subscriber", new { IdentifierSubscriber = Model.IdentifierSubscriber });
        });
        settings.TabPages.Add("История", "History").SetContent(() =>
        {
            Html.RenderAction("History", "Subscriber", new { IdentifierSubscriber = Model.IdentifierSubscriber });
        });

    }).GetHtml()

